@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 02_B");
    var cid = Request.QueryString["cid"];
    var db = Database.Open("CHINOOK");

    if (IsPost)
    {
        var choice = Request.Form["ArtistNames"];
        switch (choice.ToUpper())
        {
            case "TEXTBOX":
                {
                    //we will use the .Redirect("pagename") method of the outgoing object Response
                    //to redirect us to a new page
                    //relative addressing is needed for the page
                    Response.Redirect("BasicForm.cshtml");
                    break;
                }
            case "RADIOBUTTON":
                {
                    Response.Redirect("RadioButtons.cshtml");
                    break;
                }
            case "CHECKBOX":
                {
                    Response.Redirect("CheckBoxes.cshtml");
                    break;
                }
            default:
                {
                    //if the user did not make a selection (select .... which is the prompt line)
                    <p style="color:firebrick">Make a selection.</p>
                    break;
                }
        }
    }
    else
    {

    }
}

@section banner {
    <h1>@Page.Title</h1>
}



<form id="theform" method="post">
    <div class="row">
        <div class="offset-1">
            <label id="lblArtistNames">Select from the list:</label>&nbsp;&nbsp;
            <select id="ArtistNames" name="ArtistNames">
                <option value="">Select ...</option>
                <option value="TextBox">TextBoxes</option>
                <option value="RadioButton">RadioButtons</option>
                <option value="CheckBox">CheckBoxes</option>
            </select>&nbsp;&nbsp;
            <button type="submit" id="theButton" name="theButton" value="submit"
                    class="btn btn-primary">
                Go To ...
            </button>
        </div>
    </div>
</form>
